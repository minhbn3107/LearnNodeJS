<div class="search-form">
    <form method="POST" class="row g-3 mt-3">
        <div class="col-auto">
            <label for="search-input" class="visually-hidden">Password</label>
            <input type="text" name="q" class="form-control" id="search-input" placeholder="Input keyword">
        </div>
        <select name="value" class="form-select" multiple aria-label="multiple select example">
            <option selected>Open this select menu</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Search</button>
        </div>
    </form>
</div>